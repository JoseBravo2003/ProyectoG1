@model Proyecto.Models.ContactModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"] ContactModel</h1>

    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this?</h4>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete ContactModel</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4">Subject</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Subject)</dd>

                <dt class="col-sm-4">Message</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Message)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </form>
        </div>
    </div>
</div>
