@model Proyecto.Models.ContactModel

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12 col-lg-10">
            <div class="card border-primary shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Contact" method="post">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Your Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Your Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Subject" class="form-label"></label>
                            <input asp-for="Subject" class="form-control form-control-lg" placeholder="Subject" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Message" class="form-label"></label>
                            <textarea asp-for="Message" class="form-control form-control-lg" rows="5" placeholder="Your Message"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="Send" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
