@using Microsoft.AspNetCore.Identity;
@model IEnumerable<Proyecto.Models.Comida>

@{
    ViewData["Title"] = "Lista de Comidas";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />
    <title>@ViewData["Title"]</title>
    <script src="~/js/site.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #343a40;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .btn-add {
            margin-bottom: 20px;
            background-color: #007bff;
            color: white;
        }

            .btn-add:hover {
                background-color: #0056b3;
            }

        table {
            background-color: #ffffff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        th, td {
            text-align: center;
            padding: 12px;
        }

        thead {
            background-color: #343a40;
            color: white;
        }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tbody tr:hover {
            background-color: #e9ecef;
        }

        .food-image {
            max-width: 100px;
            max-height: 100px;
            border-radius: 8px;
        }

        .btn {
            margin: 2px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <!-- OCULTAR PARA USUARIO -->
        @if (User.IsInRole("Admin"))
        {

            <p>
                <a asp-action="Create" class="btn btn-add">Agregar Comida</a>
        </p>
        }
        <!-- ------------------------------------ -->


        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Categoría</th>
                    <th>Imagen</th>
                    <th>Cantidad</th>
                    <!-- OCULTAR PARA USUARIO -->
                    @if(User.IsInRole("Admin"))
                    {
                        <th>Acciones</th>
                    }
                    <!---------------------------------------->
                    <th>Comprar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comida in Model)
                {
                    <tr>
                        <td>@comida.Nombre</td>
                        <td>@comida.Descripcion</td>
                        <td>@comida.Precio.ToString("C")</td> <!-- Formatea el precio como moneda -->
                        <td>@comida.Categoria</td>
                        <td>
                            @if (!string.IsNullOrEmpty(comida.ImagenUrl))
                            {
                                <img src="@comida.ImagenUrl" alt="Imagen de @comida.Nombre" class="food-image" />
                            }
                            else
                            {
                                <span>No disponible</span>
                            }
                        </td>
                        <td>@comida.Cantidad</td>

                        <!-- OCULTAR PARA USUARIO -->
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                <a asp-action="Edit" asp-route-id="@comida.IdComida" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Details" asp-route-id="@comida.IdComida" class="btn btn-info btn-sm">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@comida.IdComida" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                            <!-- --------------------------------------------------------------------------------------------------- -->
                        }
                        <!--Boton de agregar al carrito-->
                        <td>
                            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                <input type="hidden" name="comidaId" value="@comida.IdComida" />
                                <button type="submit" class="btn btn-success btn-sm">Añadir a Carrito</button>
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
