@model Proyecto.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"] Usuario</h1>

    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this?</h4>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Usuario</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nombre Completo</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCompleto)</dd>

                <dt class="col-sm-4">Correo</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Correo)</dd>

                <dt class="col-sm-4">Clave</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.clave)</dd>

                <dt class="col-sm-4">Role</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdUsuario" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </form>
        </div>
    </div>
</div>
