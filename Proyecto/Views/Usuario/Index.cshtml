@model IEnumerable<Proyecto.Models.Usuario>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
        <a asp-action="DownloadReport" class="btn btn-success ml-2">Download Report</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreCompleto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.clave)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.clave)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-info btn-sm ml-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-danger btn-sm ml-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
